<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="Content-Type" const="text/html;charset=UTF-8" />
    <link href="http://fonts.googleapis.com/css?family=Comfortaa" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="style.css" >
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.4/socket.io.js"></script>
    <title>Chat App</title>
  </head>

  <body>
    <header>
      <h1>Чат</h1>
    </header>

    <section>
      <div id="change_username">
	      <input id="username" placeholder="Введите своё имя" type="text"/>
	      <input id="user_room" placeholder="№ комнаты" type="text"/>
	      <button id="connection" type="button">online</button>
      </div>
    </section>

    <section id="chatroom">
      <section id="feedback"></section>
    </section>

    <section id="input_zone"> 
      <input id="message" class="vertical-align" type="text" />
      <button id="send_message" class="vertical-align btn btn-success" type="button">&#10146;</button>
    </section>

    <button class="button-history-chat btn btn-info">История чата</button>

    <section class="history_chat_window">
      <div class="history-chat">
        <h2>История чата</h2>
        <div class="history-chat-text"></div>
        <button class="button-close-history-chat btn btn-success">Закрыть</button>
      </div>
    </section>

    <script src="http://code.jquery.com/jquery-latest.min.js"></script>
    <script src="chat.js"></script>
  </body>
</html>
